<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="main" template="/WEB-INF/main/main.jsp"> <!-- name 리턴값과 일치 -->
		<!-- include => header, content, footer 지정 -->
		<put-attribute name="header" value="/WEB-INF/main/header.jsp"/>
		<!-- 'header'라는 name을 가진 위치('/WEB-INF/main/main.jsp')에 '/WEB-INF/main/header.jsp' 파일을 불러옴 -->
		<put-attribute name="content" value="/WEB-INF/main/content.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/main/footer.jsp"/>
	</definition>
	
	<!--
		return "board/list"
		return "board/insert"
		return "food/list"
		return "food/detail"
		=> mypage / admin
	-->
	
	<definition name="*/*" extends="main"> <!-- */* : 경로명/파일명 => 어떤 파일을 받을지 모름 => 모든 파일을 다 받을 수 있도록 지정 --> <!-- extends : 상속 -->
		<put-attribute name="content" value="/WEB-INF/{1}/{2}.jsp"/> <!-- 오버라이딩 -->
	</definition>
</tiles-definitions>