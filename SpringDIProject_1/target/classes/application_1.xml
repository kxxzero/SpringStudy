<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 
		p: setter 호출
		c: 생성자 호출
	-->

	<!-- 1. 공통 부분 : CommonsDAO -->
	<!--
		<bean id="comm" class="com.sist.di.CommonsDAO">
		CommonsDAO comm=new CommonsDAO() => 매개변수가 없는 생성자
	 -->
	<bean id="comm" class="com.sist.di.CommonsDAO"
		c:driver="oracle.jdbc.driver.OracleDriver"
		p:url="jdbc:oracle:thin:@localhost:1521:XE"
		p:username="hr"
		p:password="happy"
	/>
	<!-- 객체를 받을 때는 ref를 사용 -->
	<bean id="eDao" class="com.sist.di.EmpDAO"
		p:comm-ref="comm"
		init-method="init"
	/>
	<!-- init-method : 시작과 동시에 하나의 메소드를 실행  -->
	<bean id="dDao" class="com.sist.di.DeptDAO"
		p:comm-ref="comm"
	/>
	
	<!-- 
		1. 메모리 할당(전체 등록된 bean에 대해) => 생성자 매개변수 설정
		2. setter에 값을 설정
		3. init-method 호출
		4. 사용자가 처리
		5. destory-method
		6. 메모리 해제
	 -->
	
</beans>
